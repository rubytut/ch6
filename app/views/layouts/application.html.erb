<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<!-- render helpers are used to render partials
		on the page, partials are *.html.erb files
		which names begin with '_'. -->
		<%= render 'layouts/stylesheets' %>
		<!-- Web browsers can't send DELETE requests natively,
		so Rails fakes them with JavaScript. To get the delete
		links to work, we therefore have to include the default 
		Rails JavaScript libraries -->
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		<div class="container">
			<%= render 'layouts/header' %>
			<section class="round">
				<% flash.each do |key, value| %>
					<%= content_tag(:div, value, :class => "flash #{key}") %>
				<% end %>
				<%= yield %>
			</section>			
			<%= render 'layouts/footer' %>			
			<%= debug(params) if Rails.env.development? %>					
		</div>	
	</body>
</html>
